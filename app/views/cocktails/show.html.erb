<h2><%= @cocktail.name %></h2>
<!-- <p><%= @cocktail.doses %></p><p><%= @cocktail.ingredients %></p> -->

<h2>Here are the doses of for <%= @cocktail.name %></h2>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> </li>
    <li><%= dose.description %> </li>
    <li><%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete %></li>
  <% end %>
  </ul>


<%= link_to "Go back to all cocktails", cocktails_path %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

